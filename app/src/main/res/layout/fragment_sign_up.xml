<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ctSignUp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="50dp">

        <TextView
            android:id="@+id/tvInfo"
            style="@style/textViewBig18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:text="@string/SignUpTvInfo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitileEmail"
            style="@style/textViewTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:text="@string/LoginYourMail"
            app:layout_constraintEnd_toEndOf="@+id/edtEmailSignUp"
            app:layout_constraintStart_toStartOf="@+id/edtEmailSignUp"
            app:layout_constraintTop_toBottomOf="@+id/tvInfo" />

        <EditText
            android:id="@+id/edtEmailSignUp"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_edit_txt"
            android:ems="10"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="20dp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitileEmail"
            tools:ignore="LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/tvTitlePass"
            style="@style/textViewTitle"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/LoginYourPass"
            app:layout_constraintEnd_toEndOf="@+id/edtPassSignUp"
            app:layout_constraintStart_toStartOf="@+id/edtPassSignUp"
            app:layout_constraintTop_toBottomOf="@+id/edtEmailSignUp" />

        <EditText
            android:id="@+id/edtPassSignUp"
            android:layout_width="312dp"
            android:layout_height="54dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_edit_txt"
            android:ems="10"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:paddingHorizontal="20dp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitlePass"
            tools:ignore="LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/btnSignUpFragment"
            style="@style/textViewBig18dp"
            android:layout_width="312dp"
            android:layout_height="54dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/bg_login_btn"
            android:text="@string/SignUpBtnSignUp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtPassSignUp"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

        <TextView
            android:id="@+id/btnMoveLogin"
            style="@style/textViewSmall13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:text="@string/SignUpMoveToLogin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSignUpFragment" />

        <TextView
            android:id="@+id/tvWarningEmail"
            style="@style/textViewWarning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="@+id/edtEmailSignUp"
            app:layout_constraintStart_toStartOf="@+id/edtEmailSignUp"
            app:layout_constraintTop_toBottomOf="@+id/edtEmailSignUp" />

        <TextView
            android:id="@+id/tvWarningPass"
            style="@style/textViewWarning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="@+id/edtPassSignUp"
            app:layout_constraintStart_toStartOf="@+id/edtPassSignUp"
            app:layout_constraintTop_toBottomOf="@+id/edtPassSignUp" />

        <ProgressBar
            android:id="@+id/ctProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
